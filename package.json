{
  "name": "helloworld_microservice",
  "version": "0.0.1",
  "description": "A NodeJS bootstrap scaffold project for a generic REST-based microservice utilizing the AWS technology stack.",
  "main": "index.js",
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "json-dereference-cli": "git+https://github.com/RazzM13/json-dereference-cli.git",
    "swagger-cli": "^1.0.1",
    "cfn-lint": "^1.5.1",
    "nopy": "^0.2.4"
  },
  "devDependencies": {},
  "python": {
    "dependencies": {
      "awscli": ">=1.11.132"
    }
  },
  "config": {
    "ArtifactsBucket": "com-example-api-artifacts"
  },
  "scripts": {
    "install": "npip install",
    "dereference": "json-dereference -s init.yaml -o init.deref.yaml && json-dereference -s stage.yaml -o stage.deref.yaml",
    "package": "aws cloudformation package --template-file init.deref.yaml --s3-bucket $npm_package_config_ArtifactsBucket --output-template-file init.pack.yaml",
    "validate-init": "cfn-lint validate init.deref.yaml",
    "validate-stage": "cfn-lint validate stage.deref.yaml",
    "validate-swagger": "swagger-cli validate swagger.yaml",
    "build": "npm run validate-swagger && npm run dereference && npm run validate-init && npm run validate-stage && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RazzM13/scaffold-aws-rest-microservice-nodejs.git"
  },
  "author": "RazzM13",
  "license": "MIT"
}
